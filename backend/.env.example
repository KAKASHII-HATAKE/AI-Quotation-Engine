# AQE Backend Environment Variables
# Copy this file to .env and populate all values

# Server
PORT=3000
NODE_ENV=production

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_API_KEY=your_anthropic_or_openai_api_key_here
LLM_MODEL=claude-sonnet-4-6
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Security
# Comma-separated list of Salesforce Org IDs allowed to call this service
ALLOWED_ORG_IDS=00Dxxxxxxxxxxxxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=20

# PII Tokenisation (set to 'false' to disable â€” NOT recommended for production)
PII_TOKENISATION_ENABLED=true

# Logging
LOG_LEVEL=info
